<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/homeworkdashboard/db" VERSION="2025112000" COMMENT="XMLDB for local_homeworkdashboard"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_homework_status" COMMENT="Per-user homework status snapshots by quiz close date">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="cmid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="quizid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timeclose" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Quiz close time (timestamp)"/>
        <FIELD NAME="windowdays" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" DEFAULT="7" COMMENT="Window length in days before close"/>
        <FIELD NAME="windowstart" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Start of homework window (timestamp)"/>
        <FIELD NAME="attempts" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" DEFAULT="0" COMMENT="Finished attempts in window"/>
        <FIELD NAME="bestpercent" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" DEFAULT="0" COMMENT="Best percentage grade in window"/>
        <FIELD NAME="firstfinish" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="First finished attempt time within window"/>
        <FIELD NAME="classification" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="New, Revision, or null"/>
        <FIELD NAME="quizgrade" TYPE="number" LENGTH="10" DECIMALS="2" NOTNULL="true" SEQUENCE="false" DEFAULT="0.00" COMMENT="Max score of the quiz at snapshot time"/>
        <FIELD NAME="points" TYPE="number" LENGTH="10" DECIMALS="2" NOTNULL="true" SEQUENCE="false" DEFAULT="0.00" COMMENT="Calculated points at snapshot time"/>
        <FIELD NAME="score" TYPE="number" LENGTH="10" DECIMALS="2" NOTNULL="true" SEQUENCE="false" DEFAULT="0.00" COMMENT="Raw score achieved at snapshot time"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="user_timeclose_idx" UNIQUE="false" FIELDS="userid,timeclose"/>
        <INDEX NAME="course_timeclose_idx" UNIQUE="false" FIELDS="courseid,timeclose"/>
        <INDEX NAME="cmid_idx" UNIQUE="false" FIELDS="cmid"/>
        <INDEX NAME="quizid_idx" UNIQUE="false" FIELDS="quizid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="local_homework_reports" COMMENT="Stores generated homework reports">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timeclose" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Due date timestamp, acts as report context"/>
        <FIELD NAME="subject" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="content" TYPE="text" LENGTH="big" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="ai_commentary" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Extracted AI commentary text"/>
        <FIELD NAME="ai_raw_response" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Full JSON response from AI API"/>
        <FIELD NAME="lang" TYPE="char" LENGTH="10" NOTNULL="true" SEQUENCE="false" DEFAULT="en"/>
        <FIELD NAME="drive_link" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Google Drive Link"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timeemailsent" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Timestamp when email was sent"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid_timeclose_idx" UNIQUE="false" FIELDS="userid, timeclose"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
